<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.molissa.npu_project_new.BiometricsActivity2"
    tools:showIn="@layout/app_bar_biometrics2"
    android:background="@mipmap/background2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:id="@+id/BioimageView"
            android:src="@mipmap/yn_symmetry" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/Quest_txt"
            android:textColor="#000000"
            android:textSize="25sp"
            android:text="螯是否對稱" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="是"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/YesBtn"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:text="無(不一定)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NoBtn"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView2"
            android:clickable="true"
            android:layout_marginTop="15sp" />

    </LinearLayout>

</RelativeLayout>
